<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firebase_lab08">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lab08_Firebase_LyThuyet">
        <activity android:name="com.example.firebase_lab08.ResetPassword"></activity>
        <activity android:name="com.example.firebase_lab08.PleaseTouchOne"></activity>
        <activity android:name="com.example.firebase_lab08.Register"></activity>
        <activity android:name="com.example.firebase_lab08.SignIn"></activity>
        <activity android:name="com.example.firebase_lab08.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>